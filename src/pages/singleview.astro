---
import Frame from "../layout/frame.astro";
---

<Frame pageTitle="Singleview">
    <!-- Slideshow container -->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="numbertext">1 / 3</div>
      <img src="img1.jpg" style="width:50%">
      <img src="img1.jpg" style="width:50%">
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">2 / 3</div>
      <img src="img2.jpg" style="width:50%">
      <img src="img2.jpg" style="width:50%">
    </div>
  
    <div class="mySlides fade">
      <div class="numbertext">3 / 3</div>
      <img src="img3.jpg" style="width:50%">
      <img src="img3.jpg" style="width:50%">
    </div>
  
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>
  <div class="box" style="text-align: center;">
    <h3 class="productname">Lille "Dimse" Pung</h3>
    <h3 class="price">199,00 kr</h3>
    <p>Inklusiv moms</p>
    <div class="dropdown">
      <button onclick="myFunction()" class="dropbtn">Dropdown</button>
      <div id="myDropdown" class="dropdown-content">
        <a href="#">Blå</a>
        <a href="#">Grøn</a>
        <a href="#">Gul</a>
      </div>
    </div>
  </div>
  <div class="text">
    <div class="beskrivelse1"><p>stand in text1</p></div>
    <div class="beskrivelse2"><p>stand in text2</p></div>
    <div class="beskrivelse3"><p>stand in text3</p></div>
  </div>
</Frame>

<style>
  
/* Next & previous buttons */
.prev, .next {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  margin-top: -22px;
  padding: 16px;
  color: white;
  font-weight: bold;
  font-size: 18px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}

/* Position the "next button" to the right */
.next {
  right: 0;
  border-radius: 3px 0 0 3px;
}
</style>