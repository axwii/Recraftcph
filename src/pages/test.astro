---
import Frame from "../layout/frame.astro";
const images = [
  "img/grillhandsker.webp",
  "img/grønmakeuppung.webp",
  "img/tehætte.webp",
];
---

<Frame title="Product title">
  <script>
    window.plusSlides = function (n) {
      slideIndex += n;
      showSlides();
    };

    let slideIndex = 0;

    function showSlides() {
      const slides = document.getElementsByClassName("mySlides");
      for (let i = 0; i < slides.length; i++) {
        (slides[i] as HTMLElement).style.display = "none";
      }
      (slides[slideIndex] as HTMLElement).style.display = "block";
      (slides[(slideIndex + 1) % slides.length] as HTMLElement).style.display =
        "block";
    }
  </script>
  <!-- Parent container for positioning -->
  <div class="slideshow-and-product-container">
    <!-- Slideshow container -->
    <div class="slideshow-container">
      <!-- Full-width images with number and caption text -->
      <div class="slides-wrapper" style="display: flex;">
        {
          images.map((image, index) => (
            <div
              class="mySlides fade"
              style={`display: ${index < 2 ? "block" : "none"}`}
            >
              <img src={image} class="slide-img" />
            </div>
          ))
        }
      </div>

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
  </div>

  <div class="box">
    <h3 class="productname">Test Name</h3>
    <h3 class="price">900,00 kr</h3>
    <p>Inklusiv moms</p>
    <div class="custom-select">
      <select>
        <option value="">Farve</option>
        <option value="">Blå</option>
        <option value="">Orange</option>
        <option value="">Gul</option>
        <option value="">Rød</option>
      </select>
      <span class="custom-arrow"></span>
    </div>
    <button class="btn">Læg i kurv</button>
  </div>
</Frame>

<style>
  .slideshow-and-product-container {
    position: relative;
    text-align: center;
  }

  .slideshow-container {
    position: relative;
  }

  .mySlides {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
  }

  .mySlides img {
    width: 100%;
  }

  .box {
    position: absolute;
    top: 34%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 320px;
    background: rgba(255, 255, 255, 0.6);
    border: 1px solid black;
    padding: 20px;
    z-index: 10;
    text-align: center;
  }

  .btn {
    background-color: #616c5b;
    border: 0;
    padding: 0.7em 4em;
    color: white;
    margin-top: 10px;
    cursor: pointer;
  }

  .productname {
    margin-top: 0;
  }

  select {
    padding: 0.8em 2em;
    border-radius: 30px;
    width: 40%;
    margin-bottom: 10px;
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-top: 20px;
    width: 100%;
    max-width: 1200px;
    padding: 20px;
    box-sizing: border-box;
  }

  .højre {
    text-align: center;
    align-self: start;
  }

  .beskrivelse1,
  .beskrivelse2,
  .beskrivelse3 {
    border-top: 1.5px solid;
    padding: 20px;
  }

  .beskrivelse3 {
    border-bottom: 1.5px solid;
  }

  .venstre {
    margin-top: 50px;
  }

  .venstre p {
    margin: 20px;
  }

  .product-info-mobile {
    display: none;
    text-align: center;
    padding: 5px;
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid black;
    margin-top: 20px;
  }

  /* Next & previous buttons */
  .prev,
  .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    padding: 16px;
    color: white;
    font-weight: bold;
    font-size: 18px;
    transition: 0.6s ease;
    border-radius: 0 3px 3px 0;
    user-select: none;
  }

  .next {
    right: 0;
    border-radius: 3px 0 0 3px;
  }

  .prev {
    left: 0;
  }

  .prev:hover,
  .next:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  @media (max-width: 800px) {
    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr;
    }

    .box {
      display: none;
    }

    .mySlides img:nth-child(2) {
      display: none;
    }

    .mySlides img {
      width: 100%;
    }

    .product-info-mobile {
      display: block;
      border: 0;
      margin: 5px 0 5px 0;
    }
    .product-info-mobile select {
      width: 25%;
    }
    .btn {
      width: 60%;
    }
    .venstre {
      margin-top: 20px;
    }
  }
</style>
